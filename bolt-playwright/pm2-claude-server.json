{
  "apps": [{
    "name": "claude-server",
    "script": "/opt/claude-server/claude-execution-server.py",
    "interpreter": "python3",
    "cwd": "/opt/claude-server",
    "env": {
      "CLAUDE_SERVER_PORT": "5555",
      "CLAUDE_SERVER_HOST": "127.0.0.1"
    },
    "error_file": "/var/log/claude-server/error.log",
    "out_file": "/var/log/claude-server/output.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "autorestart": true,
    "watch": false,
    "max_restarts": 10,
    "min_uptime": "10s",
    "max_memory_restart": "1G",
    "instances": 1,
    "exec_mode": "fork"
  }]
}