[Unit]
Description=Claude Execution Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/claude-server
Environment="CLAUDE_SERVER_PORT=5555"
Environment="CLAUDE_SERVER_HOST=0.0.0.0"
ExecStart=/usr/bin/python3 /opt/claude-server/claude-execution-server.py
Restart=always
RestartSec=10
StandardOutput=append:/var/log/claude-server/output.log
StandardError=append:/var/log/claude-server/error.log

[Install]
WantedBy=multi-user.target